@model InternetCafe.Models.User
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/Account/Register.css" asp-append-version="true">
    <link href="https://fonts.googleapis.com/css2?family=Inria+Sans:wght@300;400;700&display=swap" rel="stylesheet">

</head>
<body>
    <p class="webname text-center mt-5 mb-3">INTERNET CAFÃ‰</p>
    <main class="content">
        <div class="register-box bg-white">
            <p class="register text-center bg-white mt-2">REGISTER</p>
            <form asp-action="Register" asp-controller="Account" method="post" class="bg-white">
                @Html.AntiForgeryToken()
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="text-danger text-center mb-2">
                        @Html.ValidationSummary(false)
                    </div>
                }
                <div class="nameBox mx-5 bg-white">
                    <label asp-for="Name" class="nameLabel bg-white">Name</label>
                    <input asp-for="Name" name="Name" type="text" class="nameInput px-2 mx-2 bg-white">
                </div>

                <div class="phoneBox mx-5 bg-white">
                    <label asp-for="PhoneNumber" class="phoneLabel bg-white">Phone Number</label>
                    <input asp-for="PhoneNumber" name="PhoneNumber" type="number" class="phoneInput px-2 mx-2 bg-white">
                </div>

                <div class="usernameBox mx-5 mt-4 bg-white">
                    <label asp-for="Username" class="usernameLabel bg-white">Username</label>
                    <input asp-for="Username" name="Username" type="text" class="usernameInput px-2 mx-2 bg-white">
                </div>
                
                <div class="password mt-2 mx-5 mt-4 bg-white">
                    <label class="passwordLabel bg-white">Password</label>
                    <input name="password" type="password" class="passwordInput px-2 mx-2 bg-white">
                </div>

                <div class="acceptBox mt-3 bg-white">
                    <input type="checkbox" class="checkBox form-check-input me-2" required>
                    <label class="checkboxLabel bg-white" for="">Accept term and privacy</label>
                </div>
                
                <div class="registerBtnBox mt-4 bg-white">
                    <button type="submit" class="registerBtn mb-4 btn">Register</button>
                </div>
            </form>
            <div class="cancelBtnBox bg-white">
                <form asp-action="Login" asp-controller="Account" method="get" class="bg-white ms-4 mb-4">
                    <button class="cancelBtn btn">Cancel</button>
                </form>
            </div>
        </div>
    </main>
    <footer>
        <div class="footer-box">
            <p class="contact text-center bg-white mb-2">Contact</p>
            <p class="email text-center bg-white ">Email : minhphung2102@gmail.com</p>
            <a href="#" class="facebook bg-white position-absolute start-50 translate-middle-x link-underline link-underline-opacity-0">Facebook : Minh Phung</a>
        </div>
    </footer>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>