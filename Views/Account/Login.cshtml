@model InternetCafe.Models.Account
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/Account/Login.css" asp-append-version="true">

    <link href="https://fonts.googleapis.com/css2?family=Inria+Sans:wght@300;400;700&display=swap" rel="stylesheet">
</head>
<body>
    <p class="webname text-center mt-5 mb-3">INTERNET CAFÃ‰</p>
    <main class="content">
        <div class="login-box bg-white">
            <p class="login text-center bg-white mt-2">LOGIN</p>
            <form asp-action="Login" asp-controller="Account" method="post" class="bg-white">
                @Html.AntiForgeryToken()
                @if (!ViewData.ModelState.IsValid) {
                    <div class="text-danger text-center mb-2">
                        @Html.ValidationSummary(false)
                    </div>
                }
                @if (TempData["SuccessMessage"] != null) {
                    <div class="bg-white text-center mb-2">
                        @TempData["SuccessMessage"]
                    </div>
                }
                <div class="usernameBox mx-5 bg-white">
                    <label asp-for="Username" class="usernameLabel bg-white">Username</label>
                    <input asp-for="Username" name="Username" type="text" class="usernameInput px-2 mx-2 bg-white">
                </div>
                
                <div class="password mt-2 mx-5 bg-white">
                    <label asp-for="Password" class="passwordLabel bg-white">Password</label>
                    <input asp-for="Password" name="Password" type="password" class="passwordInput px-2 mx-2 bg-white">
                </div>

                <div class="loginBtnBox mt-4 bg-white">
                    <button type="submit" class="loginBtn btn">Login</button>
                </div>
            </form>
            <div class="forgotBox mx-3 bg-white">
                <a href="#" class="forgot bg-white link-underline link-underline-opacity-0">Forgot password</a>
            </div>

            <div class="textLine ms-3 bg-white">
                <span class="text bg-white">Don't have an account ?</span>
            </div>

            <div class="registerBtnBox mt-3 bg-white">
                <form asp-action="Register" asp-controller="Account" method="get" class="mb-4">
                    <button class="registerBtn btn">Register</button>
                </form>
            </div>
        
        </div>
    </main>
    <footer>
        <div class="footer-box">
            <p class="contact text-center bg-white mb-2">Contact</p>
            <p class="email text-center bg-white ">Email : minhphung2102@gmail.com</p>
            <a href="#" class="facebook bg-white position-absolute start-50 translate-middle-x link-underline link-underline-opacity-0">Facebook : Minh Phung</a>
        </div>
    </footer>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
</body>

</html>
