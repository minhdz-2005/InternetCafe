@{
    Layout = "User_Layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <Title>Deposit</Title>
    <link rel="stylesheet" href="~/css/User/Deposit.css" asp-append-version="true" />
</head>
<body>
    <main class="mainsite mb-4">
        <div class="mainBox text-center">
            <span class="title">DEPOSIT MONEY</span>
            <form  method="get">                 
                <div class="cost mt-4">
                    <label class="costLabel me-4">Amount ($)</label>
                    <input type="number" min="0" step="any" class="costInput bg-white" required>
                </div>

                <div class="mt-5">
                    <button class="btn confirmBtn">Confirm</button>
                </div>
            </form>
            <div class="mt-5">
                <form asp-action="ListComputer" asp-controller="User" method="get">
                    <button class="btn cancelBtn">Cancel</button>
                </form>
            </div>
        </div>
    </main>
</body>
</html>
