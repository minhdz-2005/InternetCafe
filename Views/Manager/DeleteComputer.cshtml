@model InternetCafe.Models.Computer
@{
    Layout = "Manager_Layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Computer</title>
    <link rel="stylesheet" href="~/css/Manager/DeleteComputer.css">
</head>
<body>
    <main class="mainsite mb-4">
        <div class="mainBox text-center">
            <span class="title">REMOVE COMPUTER</span>
            <div class="info mt-4">
                <div class="infoLine">
                    <span class="name me-4">ID</span>
                    @Model.Id
                </div>
                <div class="infoLine">
                    <span class="cost me-4">Name</span>
                    @Model.Name
                </div>
                <div class="infoLine">
                    <span class="status me-4">Cost</span>
                    @Model.Cost $
                </div>
                <div class="infoLine">
                    <span class="id  me-4">Status</span>
                    Off
                </div>
            </div>
            <form asp-action="ConfirmDeleteComputer" asp-controller="Manager" method="post">
                <div class="mt-5">
                    <input type="hidden" name="id" value="@Model.Id">
                    <button class="btn confirmBtn">Confirm</button>
                </div>
            </form>
            <div class="mt-5">
                <form asp-action="ListComputer" asp-controller="Manager" method="get">
                    <button class="btn cancelBtn">Cancel</button>
                </form>
            </div>
        </div>
    </main>
</body>
</html>